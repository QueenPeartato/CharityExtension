/*MANIFEST - this tells Chrome what is in our extension.

I copy pasted this from the Chrome Developer site*/

{
  "manifest_version": 2,
  "name": "CaresNotShares",
  "version": "1.0.0.1",

  "default_locale": "en",
  "description": "Matching those who want to make the world a better place with those who are.",
  "icons": {...}, /*Put the icon here*/

  "page_action": {
    "default_title": "Make Facebook Great Again",
    "default_icon": "images/icon.png",
    "default_popup": "popup.html",
  },

  "author": "Linda Lay, Kalib Watson, Katie Musial",

  "background": {
    "scripts": ["bootstrap.js"],
    "persistent": false
  },

  "content_scripts": [
   {
     "matches": ["http://*.facebook.com/*", "https://*.facebook.com/*"],
     "js": ["libs/underscore.min.js", "clean.js"]
   }
 ],

